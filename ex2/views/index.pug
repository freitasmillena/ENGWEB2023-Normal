extends layout
block content
  .w3-card-4
    header.w3-container.w3-purple
      h1 Registo de plantas
    .w3-container.w3-margin
      h2 Adicionar Registo
      form.w3-container(action="/" method="POST")
        fieldset  
            label Número de Registo 
            input.w3-input(type="number" name="Número-de-Registo")
            label Código de Rua 
            input.w3-input(type="number" name="Código-de-Rua")
            label Rua 
            input.w3-input(type="text" name="Rua")
            label Local 
            input.w3-input(type="text" name="Local")
            label Freguesia 
            input.w3-input(type="text" name="Freguesia")
            label Espécie 
            input.w3-input(type="text" name="Espécie")
            label Nome Científico 
            input.w3-input(type="text" name="Nome-Científico")
            label Origem 
            input.w3-input(type="text" name="Origem")
            label Data de Plantação 
            input.w3-input(type="text" name="Data-de-Plantação")
            label Estado
            input.w3-input(type="text" name="Estado")
            label Caldeira
            input.w3-input(type="text" name="Caldeira")
            label Tutor
            input.w3-input(type="text" name="Tutor")
            label Implantação
            input.w3-input(type="text" name="Implantação")
            label Gestor 
            input.w3-input(type="text" name="Gestor")
            label Data de Actualização 
            input.w3-input(type="text" name="Data-de-actualização")
            label Número de Intervenções
            input.w3-input(type="number" name="Número-de-intervenções")
        input.w3-btn.w3-round.w3-purple.w3-margin(type="submit" value="Send")
    .w3-container.w3-margin
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Espécie
          th Estado 
          th Número de Intervenções
        
        each c in plantas
          tr
            td
              a(href="/" + c._id)=c._id
            td= c.Freguesia
            td
              a(href="/especies/" + c.Espécie)= c.Espécie
            td= c.Estado
            td= c["Número de intervenções"]
              
    footer.w3-container.w3-purple.w3-margin
      h5 Generated by Plantas::EngWeb2023 in #{d}
