extends layout
block content
  .w3-card-4
    header.w3-container.w3-purple
      h1 Registo: #{planta._id}   
        a(href="/delete/" + planta._id) [eliminar]          
    .w3-container.w3-margin
      table.w3-table-all
        tr
          td #[b Id]
          td=planta._id
        tr
          td #[b Número de Registo]
          td=planta["Número de Registo"]
        tr
          td #[b Código de Rua]
          td=planta["Código de Rua"]
        tr
          td #[b Rua]
          td=planta["Rua"]
        tr
          td #[b Local]
          td=planta["Local"]
        tr
          td #[b Freguesia]
          td=planta["Freguesia"]
        tr
          td #[b Espécie]
          td=planta["Espécie"]
        tr
          td #[b Nome Científico]
          td=planta["Nome Científico"]
        tr
          td #[b Origem ]
          td=planta["Origem"]
        tr
          td #[b Data de Plantação]
          td=planta["Data de Plantação"]
        tr
          td #[b Estado]
          td=planta["Estado"]
        tr
          td #[b Caldeira]
          td=planta["Caldeira"]
        tr
          td #[b Tutor]
          td=planta["Tutor"]
        tr
          td #[b Implantação]
          td=planta["Implantação"]
        tr
          td #[b Gestor] 
          td=planta["Gestor"]
        tr
          td #[b Data de actualização]
          td=planta["Data de actualização"]
        tr
          td #[b Número de intervenções]
          td=planta["Número de intervenções"]
      p 
        a(href="/") [Página inicial]
    footer.w3-container.w3-purple.w3-margin
      h5 Generated by Plantas::EngWeb2023 in #{d}
